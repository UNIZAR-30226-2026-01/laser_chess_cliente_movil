<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageButton
        android:id="@+id/btnTienda"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:background="@drawable/nav_background_selector"
        android:scaleType="centerInside"
        android:src="@drawable/ic_shop"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPerso"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/btnPerso"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_customize"
        android:scaleType="centerInside"
        android:padding="2dp"
        android:background="@drawable/nav_background_selector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnTienda"
        app:layout_constraintEnd_toStartOf="@+id/btnHome"/>

    <ImageButton
        android:id="@+id/btnHome"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_home"
        android:scaleType="centerInside"
        android:padding="2dp"
        android:background="@drawable/nav_background_selector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnPerso"
        app:layout_constraintEnd_toStartOf="@id/btnSocial"/>

    <ImageButton
        android:id="@+id/btnSocial"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_social"
        android:scaleType="centerInside"
        android:padding="2dp"
        android:background="@drawable/nav_background_selector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnHome"
        app:layout_constraintEnd_toStartOf="@+id/btnClasif"/>

    <ImageButton
        android:id="@+id/btnClasif"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_ranking"
        android:scaleType="centerInside"
        android:padding="2dp"
        android:background="@drawable/nav_background_selector"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnSocial"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>