<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ImageButton
        android:id="@+id/boardSelection"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_tablero_prov"
        android:contentDescription="@string/game_board"
        android:scaleType="fitCenter"

        app:layout_constraintTop_toBottomOf="@id/layoutTimeMode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cardElo"
        app:layout_constraintBottom_toTopOf="@id/btnPlay"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="20dp"/>

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_settings"
        android:contentDescription="@string/settings"
        android:scaleType="centerInside"
        android:padding="8dp"

        app:layout_constraintTop_toBottomOf="@id/profileCard"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="32dp"/>

    <LinearLayout
        android:id="@+id/layoutTimeMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="80dp"

        app:layout_constraintTop_toBottomOf="@id/profileCard"
        app:layout_constraintBottom_toTopOf="@id/boardSelection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cardElo"
        app:layout_constraintHorizontal_bias="0.6"
        >

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_timer"
            android:contentDescription="@string/timer"
            android:layout_marginEnd="8dp"
            android:scaleType="centerInside"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/txtModoTiempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_mode"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </LinearLayout>


    <ImageButton
        android:id="@+id/btnHistory"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/history"
        android:src="@drawable/ic_history"
        android:scaleType="centerInside"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnPlay"
        android:layout_marginBottom="164dp"
        />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="150dp"
        android:layout_height="64dp"
        android:text="@string/play"
        app:layout_constraintStart_toEndOf="@id/btnHistory"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnTrofy"
        android:layout_marginBottom="164dp"
        />

    <ImageButton
        android:id="@+id/btnTrofy"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/ranked"
        android:src="@drawable/ic_ranked"
        android:scaleType="centerInside"
        android:padding="2dp"
        app:layout_constraintStart_toEndOf="@id/btnPlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="164dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/profileCard"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/layoutCoins"
        app:layout_constraintHorizontal_chainStyle="spread_inside">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_avatar"
                android:contentDescription="@string/avatar"
                android:scaleType="centerInside"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/txtNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#CDCDCD"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardElo"
        android:layout_width="80dp"
        android:layout_height="300dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"

        app:layout_constraintTop_toBottomOf="@id/profileCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/boardSelection"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/elo"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="8dp"
                android:layout_height="190dp"
                android:background="#CDCDCD"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/txtElo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/elo"
                android:src="@drawable/ic_elo"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/layoutCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/numCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123123"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imCoin"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="4dp"
            android:contentDescription="@string/coin"
            android:src="@drawable/ic_coin" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>