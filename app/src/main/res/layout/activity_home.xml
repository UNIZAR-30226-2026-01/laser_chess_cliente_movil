<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/btnTienda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tienda"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPerso"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <Button
        android:id="@+id/btnPerso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Perso"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnTienda"
        app:layout_constraintEnd_toStartOf="@+id/btnHome"/>

    <Button
        android:id="@+id/btnHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnPerso"
        app:layout_constraintEnd_toStartOf="@id/btnSocial"
        />

    <Button
        android:id="@+id/btnSocial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Social"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnHome"
        app:layout_constraintEnd_toStartOf="@+id/btnClasif"/>

    <Button
        android:id="@+id/btnClasif"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Clasif"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnSocial"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>