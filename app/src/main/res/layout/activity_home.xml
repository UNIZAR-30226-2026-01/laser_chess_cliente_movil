<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/barraNav"
        android:textSize="24sp"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/btnOpc"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="Opciones"
        android:src="@drawable/ic_settings"
        android:scaleType="centerInside"
        android:padding="2dp"
        app:layout_constraintBottom_toTopOf="@id/barraNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnJugar"
        android:layout_marginBottom="64dp"
        />

    <Button
        android:id="@+id/btnJugar"
        android:layout_width="150dp"
        android:layout_height="64dp"
        android:text="Jugar"
        app:layout_constraintStart_toEndOf="@id/btnOpc"
        app:layout_constraintBottom_toTopOf="@id/barraNav"
        app:layout_constraintEnd_toStartOf="@id/btnTrofeo"
        android:layout_marginBottom="64dp"
        />

    <ImageButton
        android:id="@+id/btnTrofeo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="ranked"
        android:src="@drawable/ic_ranked"
        android:scaleType="centerInside"
        android:padding="2dp"
        app:layout_constraintStart_toEndOf="@id/btnJugar"
        app:layout_constraintBottom_toTopOf="@id/barraNav"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="64dp"
        />

    <include
        android:id="@+id/barraNav"
        layout="@layout/barra_nav"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cajonUsuario"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/numMonedas"
        app:layout_constraintHorizontal_chainStyle="spread_inside">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_avatar"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layoutMonedas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/numMonedas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123123"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imMoneda"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_coin" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>